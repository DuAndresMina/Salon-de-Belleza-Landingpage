<style>
  .animate-fade-in {
    animation: fadeIn 0.5s ease-in forwards;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .tab-btn.active {
    @apply bg-accent text-white;
  }

  .swiper-slide {
    @apply !w-full !h-full;
  }
</style>