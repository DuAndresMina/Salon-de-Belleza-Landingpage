---
interface Props {
  title: string;
  description: string;
  icon: string;
  price?: string;
  category: string;
  whatsappNumber: string;
}

const { title, description, icon, price, category, whatsappNumber } = Astro.props;
---

<div 
  class="service-card group relative overflow-hidden rounded-2xl bg-white p-6 shadow-xl hover:shadow-2xl transition-all duration-300"
  data-aos="fade-up"
  data-aos-delay="100"
  data-category={category}
>
  <div class="absolute top-0 right-0 -mt-4 -mr-4 h-16 w-16 rounded-full bg-accent opacity-10 group-hover:opacity-20 transition-opacity duration-300"></div>
  <div class="relative z-10">
    <div class="text-5xl mb-6 transform group-hover:scale-110 transition-transform duration-300 bg-center"><img src={icon} alt={title} class="bg-center" width="75" height="75" /></div>
    <h3 class="text-2xl font-display font-semibold mb-3 text-gray-800">{title}</h3>
    <p class="text-gray-600 mb-4 group-hover:text-gray-700 transition-colors duration-300">{description}</p>
    {price && (
      <div class="flex items-center justify-between">
        <span class="text-accent font-semibold text-lg">Desde {price}</span>
        <a 
          href={`https://wa.me/${whatsappNumber}?text=Hola, me interesa el servicio de ${title}`}
          target="_blank"
          rel="noopener noreferrer"
          class="bg-accent text-white px-4 py-2 rounded-full text-sm opacity-0 group-hover:opacity-100 transition-all duration-300 hover:bg-accent/90"
        >
          Reservar
        </a>
      </div>
    )}
  </div>
  <div class="absolute bottom-0 left-0 h-1 w-full bg-gradient-to-r from-primary via-accent to-secondary transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
</div>